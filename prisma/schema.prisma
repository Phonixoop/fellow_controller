generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlserver"
    url      = env("DATABASE_URL")
}

model User {
    id           String    @id @default(cuid())
    name         String?
    username     String    @unique
    password     String
    description  String?
    is_active    Boolean   @default(true)
    image_url    String?
    display_name String?
    created_at   DateTime  @default(now())
    updated_at   DateTime?
    roleId       String?
    sessions     Session[]
    role         Role?     @relation(fields: [roleId], references: [id])

    @@map("users")
}

model Role {
    id          String @id @default(cuid())
    name        String
    permissions String @db.Text
    users       User[]

    @@unique([name])
    @@index([name])
    @@map("roles")
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    users        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@map("sessions")
}

model Verification_token {
    id         String   @id @default(cuid())
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
    @@map("verification_tokens")
}

model Form {
    id                  Int                           @id @default(autoincrement())
    title               String
    form_number         String
    description         String                        @db.Text
    accountingDocuments FormAccountingDocumentTable[] @relation("FormToDocuments")
    appendices          String                        @db.Text
    rules               String                        @db.Text
    considerations      String                        @db.Text
    time                String                        @db.Text
    audit               String                        @db.Text
    financialProcessing String                        @map("financial_Processing")

    created_at DateTime  @default(now())
    updated_at DateTime?

    @@map("forms")
}

model FormAccountingDocumentTable {
    id          Int    @id @default(autoincrement())
    formId      Int
    group       String
    total       String
    moeen       String
    level_4     String
    level_5     String
    level_6     String
    description String @db.Text
    debtor      String
    creditor    String

    form Form @relation("FormToDocuments", fields: [formId], references: [id])

    created_at DateTime  @default(now())
    updated_at DateTime?

    @@map("FormAccountingDocumentTables")
}
